<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Something.EnterPage"
            >
    <StackLayout x:Name="EnterWindow">
        <Label x:Name="MainLabel"
            Text="Вход"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout x:Name="Enter"  IsEnabled="True" IsVisible="True">

            <Entry x:Name="usernameInput" Placeholder="Имя пользователя"/>
            <Entry x:Name="PasswordInput" Placeholder="Пароль"/>
            <Button x:Name="EnterBtn" Text="Войти" Clicked="OnEnterBtnClicked" />
        </VerticalStackLayout>
        <VerticalStackLayout x:Name="UserData"  IsEnabled="False" IsVisible="False">

            <Label x:Name="username"/>
            <Label x:Name="firstname" />
            <Label x:Name="lastname" />
            <Label x:Name="rights"/>
            <Button x:Name="exit" Clicked="exit_Clicked" Text="Выход" VerticalOptions="End" HorizontalOptions="End" Margin="25" CornerRadius="10"/>
        </VerticalStackLayout>

        
      
    </StackLayout>
 
    
</ContentPage>